<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5sp" >


    <TextView
        android:text="@string/old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        />

    <EditText
        android:hint="@string/old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/edit_text_shape"
        android:id="@+id/fragment_change_password_old_password" />

    <TextView
        android:text="@string/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
         />

    <EditText
        android:hint="@string/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/edit_text_shape"
        android:id="@+id/fragment_change_password_new_password" />

    <TextView
        android:text="@string/confirm_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        />

    <EditText
        android:hint="@string/confirm_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/edit_text_shape"
        android:id="@+id/fragment_change_password_confirm_new_password" />

    <Button
        android:text="@string/change_password_button"
        android:layout_width="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_change_confirm_button" />
</LinearLayout>