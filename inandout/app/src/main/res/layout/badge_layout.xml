<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@android:color/transparent"
    android:layout_height="?attr/actionBarSize"

    android:clickable="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_shopping_cart_white_24dp"
        android:id="@+id/badge_layout_cart_image"
        tools:ignore="ContentDescription"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true" />

    <TextView
        android:text="1"
        android:layout_width="18dip"
        android:layout_height="wrap_content"
        android:id="@+id/badge_layout_text_view"
        tools:ignore="HardcodedText,SmallSp"
        android:background="@drawable/cart_counter_shape"
        android:textSize="12sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="8sp"
        android:layout_marginRight="8sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/badge_layout_search_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_search_white_24dp"
        android:layout_alignTop="@+id/badge_layout_cart_image"
        android:layout_toLeftOf="@+id/badge_layout_cart_image"
        android:layout_toStartOf="@+id/badge_layout_cart_image"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        tools:ignore="ContentDescription"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="false" />

    <TextView
        android:text="@string/app_name"
        android:layout_toStartOf="@+id/badge_layout_search_image"
        android:layout_toLeftOf="@+id/badge_layout_search_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

</RelativeLayout>