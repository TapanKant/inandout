<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5sp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/cart_item_shape"
        android:orientation="horizontal"
        android:layout_margin="1sp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/category_item_layout_for_view_product_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_weight="1.18"
            android:clickable="true"
            android:src="@drawable/ic_launcher"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="5sp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/category_item_layout_for_view_product_product_details"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:text="@string/productdetails"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/category_item_layout_for_view_product_MRP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/price"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/button_shadow_color" />
            <TextView
                android:id="@+id/category_item_layout_for_view_product_SP"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:text="@string/sp"
                android:textColor="@color/sp_color"
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <TextView
                android:id="@+id/category_item_layout_for_view_product_addToCart"
                style="@style/addToCartButton"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:textColor="@color/add_to_cart_button_color"
                android:clickable="true"
                android:longClickable="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/addtocart"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>